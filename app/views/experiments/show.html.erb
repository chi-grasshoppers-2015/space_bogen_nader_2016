<h3>Details for Experiment: <%= @experiment.title %></h3>
<h4>Description:</h4>
<p><%= @experiment.description %></p>
<h4>Hypothesis:</h4>
<p><%= @experiment.hypothesis %></p>
<% if @experiment.completed? %>
  <h4>Conclusion:</h4>
  <p><%= @experiment.conclusion %></p>
<% end %>
<h4>Start Date:</h4>
<p><%= @experiment.start_date %></p>
<h4>End Date:</h4>
<p><%= @experiment.end_date %></p>
<h4>Faculty Member:</h4>
<p><%= @experiment.owner.name %></p>
<h4>Lab:</h4>
<p><%= @experiment.lab.name %></p>
<h4>Procedures:</h4>
<%= render @experiment.procedures %>
<% if current_user.faculty? && current_user.experiments.include?(@experiment) %>
  <p><%= link_to "Add procedure", new_procedure_path(@experiment, experiment_id: @experiment.id) %></p>
<% elsif !current_user.faculty? && !@experiment.staffs.include?(current_user) %>
  <%= link_to "Sign up for this experiment", assign_path(@experiment), method: :post %>
<% end %>
